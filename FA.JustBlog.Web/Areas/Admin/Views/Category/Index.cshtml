@using FA.JustBlog.ViewModels.Categories
@model IList<CategoryVM>
@{
    ViewData["Title"] = "Index";
    int stt = 1;
}

<partial name="_Notification" />

<h1>Category Index</h1>
<div class="text-end">
    <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-primary">Create New</a>
</div>
<table class="table table-striped table-bordered w-100">
    <thead>
        <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>Url Slug</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@stt</td>
                <td>@item.CategoryName</td>
                <td>@item.UrlSlug</td>
                <td>@Html.Raw(@item.Description)</td>
                <td>
                    <div class="btn-group">
                        <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning rounded">Edit</a>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-info">Details</a>
                        <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger rounded">Delete</a>
                    </div>
                </td>
            </tr>
            stt++;
        }
    </tbody>
</table>


