@using FA.JustBlog.ViewModels.Comments
@model IList<CommentVM>
@{
    ViewData["Title"] = "Index";
    int stt = 1;
}

<partial name="_Notification" />

<h1>Comment Index</h1>
<div class="text-end">
    <a asp-area="Admin" asp-controller="Comment" asp-action="Create" class="btn btn-primary">Create New</a>
</div>
<table class="table table-striped table-bordered w-100">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Comment Header</th>
            <th>Comment Text</th>
            <th>Post</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@stt</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.CommentHeader</td>
                <td>@Html.Raw(@item.CommentText)</td>
                <td>@item.PostTitle</td>
                <td>
                    <div class="btn-group">
                        <a asp-area="Admin" asp-controller="Comment" asp-action="Edit" asp-route-id="@item.CommentId" class="btn btn-warning rounded">Edit</a>
                        <a asp-area="Admin" asp-controller="Comment" asp-action="Details" asp-route-id="@item.CommentId" class="btn btn-info">Details</a>
                        <a asp-area="Admin" asp-controller="Comment" asp-action="Delete" asp-route-id="@item.CommentId" class="btn btn-danger rounded">Delete</a>
                    </div>
                </td>
            </tr>
            stt++;
        }
    </tbody>
</table>


