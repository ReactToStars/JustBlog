@using FA.JustBlog.ViewModels.Tags
@model IList<TagVM>
@{
    ViewData["Title"] = "Index";
    int stt = 1;
}

<partial name="_Notification" />

<h1>Tag Index</h1>
<div class="text-end">
    <a asp-area="Admin" asp-controller="Tag" asp-action="Create" class="btn btn-primary">Create New</a>
</div>
<table class="table table-striped table-bordered w-100">
    <thead>
        <tr>
            <th>#</th>
            <th>Tag Name</th>
            <th>Url Slug</th>
            <th>Description</th>
            <th>Count</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@stt</td>
                <td>@item.TagName</td>
                <td>@item.UrlSlug</td>
                <td>@item.Description</td>
                <td>@item.Count</td>
                <td>
                    <div class="btn-group">
                        <a asp-area="Admin" asp-controller="Tag" asp-action="Edit" asp-route-id="@item.TagId" class="btn btn-warning rounded">Edit</a>
                        <a asp-area="Admin" asp-controller="Tag" asp-action="Details" asp-route-id="@item.TagId" class="btn btn-info rounded">Details</a>
                        <a asp-area="Admin" asp-controller="Tag" asp-action="Delete" asp-route-id="@item.TagId" class="btn btn-danger rounded">Delete</a>
                    </div>
                </td>
            </tr>
            stt++;
        }
    </tbody>
</table>


