@model FA.JustBlog.ViewModels.Tags.TagVM

@{
    ViewData["Title"] = "Delete";
}

<h2>Update Tag</h2>
<form asp-area="Admin" asp-controller="Tag" asp-action="Delete" method="post">
    <input asp-for="TagId" hidden />
    <div class="mb-3">
        <label asp-for="TagName"></label>
        <input asp-for="TagName" class="form-control" disabled/>
    </div>
    <div class="mb-3">
        <label asp-for="UrlSlug"></label>
        <input asp-for="UrlSlug" class="form-control" disabled/>
    </div>
    <div class="mb-3">
        <label asp-for="Count"></label>
        <input asp-for="Count" class="form-control" disabled/>
    </div>
    <div class="mb-3">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="3" disabled></textarea>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-area="Admin" asp-controller="Tag" asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>
</form>

