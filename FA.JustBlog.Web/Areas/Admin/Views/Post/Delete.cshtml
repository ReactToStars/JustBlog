@model FA.JustBlog.ViewModels.Posts.PostDetailVM

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Post</h2>
<form asp-area="Admin" asp-controller="Post" asp-action="Delete" method="post">
    <input asp-for="PostId" hidden />
    <div class="mb-3">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" disabled/>
    </div>
    <div class="mb-3">
        <label asp-for="UrlSlug"></label>
        <input asp-for="UrlSlug" class="form-control" disabled/>
    </div>
    <div class="mb-3">
        <label asp-for="ShortDescription"></label>
        <textarea asp-for="ShortDescription" class="form-control" rows="3" disabled></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Published"></label>
        <input asp-for="Published" disabled/>
    </div>
    <div class="mb-3">
        <label asp-for="ViewCount"></label>
        <input asp-for="ViewCount" class="form-control" disabled/>
    </div>
    <div class="mb-3">
        <label asp-for="Rate"></label>
        <input asp-for="Rate" class="form-control" disabled/>
    </div>
    <div class="mb-3">
        <label asp-for="CategoryName"></label>
        <input asp-for="CategoryName" class="form-control" disabled/>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-area="Admin" asp-controller="Post" asp-action="Index" class="btn btn-secondary">Back To List</a>
    </div>
</form>

