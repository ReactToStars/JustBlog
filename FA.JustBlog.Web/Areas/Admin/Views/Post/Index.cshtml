@using FA.JustBlog.ViewModels.Posts
@model IList<PostIndexVM>
@{
    ViewData["Title"] = "Index";
    int stt = 1;
}

<partial name="_Notification" />

<h1>Post Index</h1>
<div class="text-end">
    <a asp-area="Admin" asp-controller="Post" asp-action="Create" class="btn btn-primary">Create New</a>
</div>
<table class="table table-striped table-bordered w-100">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Url Slug</th>
            <th>Short Description</th>
            <th>ViewCount</th>
            <th>Rate</th>
            <th>Published</th>
            <th>CategoryName</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@stt</td>
                <td>@item.Title</td>
                <td>@item.UrlSlug</td>
                <td>@Html.Raw(@item.ShortDescription)</td>
                <td>@item.ViewCount</td>
                <td>@item.Rate</td>
                <td>
                    @if(item.Published == true)
                    {
                        <input type="checkbox" checked disabled>
                    }
                    else
                    {
                        <input type="checkbox" disabled>
                    }
                </td>
                <td>@item.CategoryName</td>
                <td>
                    <div class="btn-group">
                        <a asp-area="Admin" asp-controller="Post" asp-action="Edit" asp-route-id="@item.PostId" class="btn btn-warning rounded">Edit</a>
                        <a asp-area="Admin" asp-controller="Post" asp-action="Details" asp-route-id="@item.PostId" class="btn btn-info rounded">Details</a>
                        <a asp-area="Admin" asp-controller="Post" asp-action="Delete" asp-route-id="@item.PostId" class="btn btn-danger rounded">Delete</a>
                    </div>
                </td>
            </tr>
            stt++;
        }
    </tbody>
</table>


